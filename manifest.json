{
  "manifest_version": 2,

  "name": "Bookmark Opener",
  "description": "Extends the options for opening bookmarks",
  "version": "1.0",

  "permissions": ["bookmarks", "storage", "chrome://favicon/"],
  "icons": {
    "16":  "icon16.png",
    "48":  "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
